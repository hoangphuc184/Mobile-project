<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gallery">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Gallery"
        android:noHistory="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gallery">
        <activity android:name=".VideoByDateActivity"></activity>
        <activity android:name=".DetailsScreen"></activity>
        <activity android:name=".VideoDetailsScreen"/>
        <activity android:name=".ByDateActivity"></activity>
        <activity android:name=".Settings"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VideoPlayActivity" />
        <activity android:name=".FullScreenActivity" />
        <activity android:name=".LoggedSecurityViewActivity" />
        <activity android:name=".VideoViewActivity"></activity>
        <activity android:name=".FavoriteViewActivity" />
        <activity android:name=".SecurityViewActivity" />
        <activity android:name=".LocationViewActivity" />
    </application>

</manifest>