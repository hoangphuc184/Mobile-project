<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsScreen">
    <ImageButton
        android:id="@+id/btnBackDVV"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_back"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"/>
    <TextView
        android:id="@+id/details_DVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@+id/btnBackDVV"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_17sdp"
        tools:ignore="MissingConstraints" ></TextView>

    <ImageView
        android:id="@+id/cale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:src="@drawable/ic_calendar"
        app:layout_constraintTop_toBottomOf="@+id/btnBackDVV"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"></ImageView>

    <TextView
        android:id="@+id/create_date_DVV"
        android:text="dddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/cale"
        app:layout_constraintTop_toBottomOf="@id/btnBackDVV"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_23sdp"
        tools:ignore="MissingConstraints"></TextView>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_img"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/cale"
        app:layout_constraintStart_toStartOf="@id/cale"
        android:layout_marginTop="@dimen/_25sdp"
        ></ImageView>

    <TextView
        android:id="@+id/file_name_tv_DVV"
        android:text="ddddddddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/create_date_DVV"
        android:layout_marginTop="@dimen/_27sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/pic"></TextView>

    <TextView
        android:id="@+id/path_file_tv_DVV"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="dddddd"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/file_name_tv_DVV"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/file_name_tv_DVV"
        ></TextView>

    <TextView
        android:id="@+id/size"
        android:text="zzzzzzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/path_file_tv_DVV"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/file_name_tv_DVV"></TextView>
    <TextView
        android:id="@+id/length"
        android:text="zzzzzzz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/size"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@id/file_name_tv_DVV"></TextView>

    <TextView
        android:id="@+id/width_heigh_DVV"
        android:text="sdsdsds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/path_file_tv_DVV"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        app:layout_constraintStart_toEndOf="@id/size"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>